{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "clipboard-manager:default",
    "global-shortcut:default",
    "notification:default",
    { "identifier": "http:default", "allow": { "scope": ["https://api.groq.com/**", "https://generativelanguage.googleapis.com/**"] } },
    { "identifier": "path:default", "allow": { "paths": ["$APP_CONFIG_DIR/**"] } }
  ]
}
